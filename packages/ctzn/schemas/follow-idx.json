{
  "id": "ctzn.network/follow-idx",
  "title": "Follows Index",
  "description": "Aggregated follows for users on the server",
  "type": "json",
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["subjectId", "followerIds"],
    "properties": {
      "subjectId": {
        "type": "string",
        "pattern": ".+@.+"
      },
      "followerIds": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": ".+@.+"
        }
      }
    }
  }
}