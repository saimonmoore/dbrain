{
  "id": "ctzn.network/profile",
  "title": "Profile",
  "description": "Information about a user",
  "type": "json",
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["displayName"],
    "properties": {
      "displayName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 64
      },
      "description": {
        "type": "string",
        "maxLength": 256
      },
      "homepageUrl": {
        "type": "string",
        "format": "uri"
      }
    }
  }
}