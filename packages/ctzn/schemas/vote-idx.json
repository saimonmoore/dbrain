{
  "id": "ctzn.network/vote-idx",
  "title": "Vote Index",
  "description": "Aggregated vote counts on a piece of content",
  "type": "json",
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["subject", "upvoteUrls", "downvoteUrls"],
    "properties": {
      "subject": {
        "type": "object",
        "required": ["dbUrl", "authorId"],
        "properties": {
          "dbUrl": {
            "type": "string",
            "format": "uri"
          },
          "authorId": {
            "type": "string",
            "pattern": ".+@.+"
          }
        }
      },
      "upvoteUrls": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "downvoteUrls": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}