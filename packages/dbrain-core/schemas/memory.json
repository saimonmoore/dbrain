{
  "id": "ctzn.network/dbrain/memory",
  "title": "Memory",
  "description": "A social media feed item to remember and recover",
  "type": "json",
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["type", "createdAt", "updatedAt"],
    "additionalProperties": false,
    "properties": {
      "type": {
        "type": "string",
        "enum": ["link", "article", "image"]
      },
      "link": {
        "type": "string",
        "minLength": 1,
        "maxLength": 500
      },
      "title": {
        "type": "string",
        "minLength": 1,
        "maxLength": 1000
      },
      "content": {
        "type": "string",
        "minLength": 1,
        "maxLength": 65000
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            }
          }
        }
      },
      "collection": {
        "type": "object",
        "required": ["dbUrl", "userId"],
        "additionalProperties": false,
        "properties": {
          "dbUrl": {
            "type": "string",
            "format": "uri"
          },
          "userId": {
            "type": "string",
            "pattern": ".+@.+"
          }
        }
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      },
      "updatedAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}
